<link rel="stylesheet" href="../../css/main.css" type="text/css" />
<link rel="stylesheet" href="../../app.css" type="text/css" />

<h1>Lista de Familiares</h1><br><br>

<table id='table-2'>
	<thead>
		<tr>
			<th>ID</th>
			<th>Icono</th>
			<th>Nombre</th>
			<th>Clases</th>
			<th>Bonificador</th>
			<th>Lacra</th>
		</tr>	
	</thead>
	<tbody>
		<% pets.each do |p| %>
			<tr>
				<td><%= p[:id] %></td>
				<td>
					<% img_path = "'../images/pets/#{p[:name]}.png'" %>
					<img src=<%=img_path%> alt=<%=p[:name]%>, id='icon2' />
				</td>
				<td><%= p[:name].capitalize %></td>
				<td><% p[:personajes].each do |pj| %>
						<img src=../images/personajes/<%= pj %>.png alt=<%= pj %> /, id='icon'>
						<% unless pj=="enano" %>
							<img src=../images/personajes/<%= genderize(pj,"female") %>.png alt="personaje" /, id='icon'>
						<% end %>
					<% end %>
				</td>
				<td><%= p[:bono] %></td>
				<td><%= p[:lacra] || "Sin implementar" %></td>
			</tr>
		<% end %>
	</tbody>
</table>