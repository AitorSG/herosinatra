<%= erb :menu %><br>
<h1>Lista de Familiares</h1>
<table id='table-2'>
	<thead>
		<tr>
			<th>Icono</th>
			<% pets.first.keys.each do |columna| %>
				<th><%= columna.to_s.capitalize %></th>
			<% end %>
		</tr>	
	</thead>
	<tbody>
		<% pets.each do |p| %>
			<tr>
				<td>
					<% img_path = "'../images/pets/#{p[:name]}.png'" %>
					<img src=<%=img_path%> alt=<%=p[:name]%>, id='icon2' />
				</td>
				<td><%= p[:id] %></td>
				<td><%= p[:name].capitalize %></td>
				<td><% p[:personajes].each do |pj| %>
						<img src=../images/personajes/<%= pj %>.png alt=<%= pj %> /, id='icon'>
						<% unless pj=="enano" %>
							<img src=../images/personajes/<%= genderize(pj,"female") %>.png alt="personaje" /, id='icon'>
						<% end %>
					<% end %>
				</td>
				<td><%= p[:bono] %></td>
				<td><%= p[:lacra] || "Sin implementar" %></td>
			</tr>
		<% end %>
	</tbody>
</table>