<div class="information_popup_container">
	<div class="information">
		<% if a[:enchants] %>
			<% img_path = "'../images/#{item}s/magic/#{send(item,(a[:id]))[:name] + a[:enchants].size.to_s}.png'" %>
		<% else %>
			<% img_path = "'../images/#{item}s/#{send(item,(a[:id]))[:name]}.png'" %>
		<% end %>
		<img src=<%= img_path %> alt=<%= send(item,(a[:id]))[:name] %>, id='icon' />
	</div>
	<div class="popup_information">
		<center><h3>
			<%= send(item,(a[:id]))[:name].capitalize %><br><br>
			<img src=<%= img_path %> alt=<%= send(item,(a[:id]))[:name] %>, id='icon3' />
		</h3></center>
		<%= "<li>Valor de combate: #{send(item,(a[:id]))[:powa]}</li>" if send(item,(a[:id]))[:powa] %>
		<%= "<li>Permite atacar en diagonal</li>" if send(item,(a[:id]))[:diagonal] %>
		<%= "<li>#{item.capitalize} mundana</li>" if mundano?(a) %>
		<%= "<li>Tipo: #{armadura(a[:id])[:categoria]} </li>"   if item == 'armadura' %>
		<% unless mundano?(a) %>
			<br>
			<% if is_tier?({:gemas => a[:gemas]}) %>
				<% color = tier(is_tier?({:gemas => a[:gemas]}))[:color] %>
			<% elsif is_tier?({:joyas => a[:joyas]}) %>
				<% color = tier(is_tier?({:joyas => a[:joyas]}))[:color] %>
			<% else %>
				<% color = 'black' %>
			<% end %>
			<table id='tier', style="background-color:<%= color %>;">
				<tbody>
					<tr>
						<td>
							<% if is_tier?({:joyas => a[:joyas]}) %>
								<h3>Tier de <%= tier(is_tier?({:joyas => a[:joyas]}))[:name].capitalize %></h3>
								<% end %>
							<% if is_tier?({:gemas => a[:gemas]}) %>
								<h3>Tier de <%= tier(is_tier?({:gemas => a[:gemas]}))[:name].capitalize %></h3>
							<% else %>
							<h3>Engarces</h3>
							<% end %>
							<% if a[:gemas] %>
								<% a[:gemas].each do |g| %>
									<% img_path = "'../../images/treasures/gemas/#{gema(g)[:name]}.png'" %>
									<img src=<%=img_path%> alt=<%=gema(g)[:name]%>, id='icon' />
								<% end %>
							<% end %>
							<% if a[:joyas] %>						
								<% a[:joyas].each do |j| %>
									<% img_path = "'../../images/treasures/joyas/#{joya(j)[:name]}.png'" %>
									<img src=<%=img_path%> alt=<%=joya(j)[:name]%>, id='icon' />
								<% end %>
							<% end%>
							<% if a[:runas] %>
								<% a[:runas].each do |r| %>
									<% img_path = "'../../images/treasures/runas/#{runa(r)[:name]}.png'" %>
									<img src=<%=img_path%> alt=<%=runa(r)[:name]%>, id='icon' />
								<% end %>
							<% end %>
							<% if a[:ranuras] %>
								<% a[:ranuras].times do %>
									<% img_path = "'../../images/treasures/socket.png'" %>
									<img src=<%=img_path%> alt='ranura-hueca', id='icon' />
									<% end %>						
							<% end %>
						</td>
					</tr>
				</tbody>
			</table>						
		<% end %>
		<% if a[:enchants] %>	
			<br>
			<h4>Propiedades m√°gicas</h4>
			<% a[:enchants].each do |e| %>
				<li><%= enchant(e)[:name].capitalize %>
			<% end %>
		<% end %>	
	</div>
</div>
