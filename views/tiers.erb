<link rel="stylesheet" href="../../app.css" type="text/css" />

<h1><center>Lista de Tiers</center></h1>
<a href=/>√çndice</a><br><br>

<table id='table-2'>
	<thead>
		<tr>
			<th>ID</th>
			<th>Combo</th>
			<th>Nombre</th>
			<th>Bonificador</th>
		</tr>	
	</thead>
	<tbody>
		<% tiers.each do |t| %>
			<tr>
				<td><%= t[:id] %></td>
				<td><% t[:mix].keys.each do |familia| %>
						<% t[:mix][familia.to_sym].each do |id| %>
							<% engarce = send(familia)[id - 1][:name] %>
							<% img_path = "'../images/treasures/#{familia}/#{engarce}.png'" %>
							<img src=<%=img_path%> alt=<%= engarce %>, id='icon' />
						<% end %>
					<% end%>
				</td>
				<td><%= t[:name].capitalize %></td>
				<td><%= t[:bono].capitalize %></td>
			</tr>
		<% end %>
	</tbody>
</table>