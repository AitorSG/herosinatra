<h1>Lista de Miscel√°neas</h1>

<table id='table-2'>
	<thead>
		<tr>
			<th>ID</th>
			<th>Icono</th>
			<th>Nombre</th>
			<th>Permitidos</th>
		</tr>	
	</thead>
	<tbody>
		<% miscelaneas.each do |m| %>
			<tr>
				<td><%= m.id %></td>
				<td>
					<% img_path = "'../images/miscelaneas/#{m.name}.png'" %>
					<img src=<%=img_path%> alt=<%=m.name%>, id='icon' />
				</td>
				<td><%= m.name.capitalize %></td>
				<td><%= m.max.to_s %></td>
			</tr>
		<% end %>
	</tbody>
</table>