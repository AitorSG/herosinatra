<title>Herosheet: Runas</title>
<%= erb :menu %><br>
<h1>Lista de Runas</h1>

<table id='table-2'>
	<thead>
		<tr>
			<th>1D12</th>
			<th>Icono</th>
			<th>Nombre</th>
		</tr>	
	</thead>
	<tbody>
		<% runas.each do |r| %>
			<tr>
				<td><%= r[:id] + 1 %></td>
				<td>
					<% img_path = "'../images/treasures/runas/#{r[:name]}.png'" %>
					<img src=<%=img_path%> alt=<%=r[:name]%>, id='icon' />
				</td>
				<td><%= r[:name].upcase %></td>
			</tr>
		<% end %>
	</tbody>
</table>
<br>