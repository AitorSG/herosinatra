<h2>Tesoros</h2>

<h3>Runas</h3>
<% @heroe[:runas].each do |r| %>
	<% img_path = "'../../images/treasures/runas/#{runa(r)[:name]}.png'" %>
	<img src=<%=img_path%> alt=<%=runa(r)[:name]%>, id='icon' />
<% end %>
<%= "El personaje no tiene ninguna runa." if @heroe[:runas].empty? %>

